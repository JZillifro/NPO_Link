{
   "AWSEBDockerrunVersion": 2,
   "containerDefinitions": [{
      "essential": true,
      "memory": 256,
      "image": "gerardomares/npolink:frontend",
      "mountPoints": [{
         "containerPath": "/usr/frontend",
         "sourceVolume": "_frontend"
      }],
      "name": "frontend",
      "portMappings": [{
         "containerPort": 3000,
         "hostPort": 80
      }]
   },
   {
      "essential": true,
      "memory": 256,
      "image": "gerardomares/npolink:backend",
      "environment": [
        {
          "name": "FLASK_ENV",
          "value": "production"
       },
       {
          "name": "APP_SETTINGS",
          "value": "npolinkapi.config.ProductionConfig"
       }
     ],
      "mountPoints": [{
         "containerPath": "/usr/src/app",
         "sourceVolume": "_backend"
      }],
      "name": "backend",
      "portMappings": [{
         "containerPort": 5000,
         "hostPort": 5000
      }],
      "links": ["frontend"]
   }],
   "family": "",
   "volumes": [{
      "host": {
         "sourcePath": "frontend"
      },
      "name": "_frontend"
   },
   {
      "host": {
         "sourcePath": "backend"
      },
      "name": "_backend"
   }]
}
